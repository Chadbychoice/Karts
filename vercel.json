{
    "version": 2,
    "builds": [
        { "src": "public/**", "use": "@vercel/static" },
        { "src": "server.js", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/socket.io/(.*)", "dest": "/server.js" },
        { "src": "/health", "dest": "/server.js" },
        { "src": "/(.*)", "dest": "/public/$1" }
    ],
    "env": {
        "NODE_ENV": "production"
    }
} 